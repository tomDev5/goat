[build.all]
toolchain = "g++"

linker_flags = []
library_paths = []
libraries = []
compiler_flags = ["-std=c++17", "-Wall", "-Werror"]
include_paths = []
defines = []

[build.release]
target = "application"
compiler_flags = ["-O3"]
defines = ["RELEASE"]

[build.debug]
target = "application_debug"
compiler_flags = ["-Og"]
defines = ["DEBUG"]

[build.test]
target = "application_test"
libraries = ["gtest", "gtest_main", "pthread"]
compiler_flags = ["-Og"]
defines = ["DEBUG", "TEST"]
